general {
    colors= true
    interval= 10
    color_good='#8c9440'
    color_degraded='#d4de61'
    color_prebad='#C45500'
    color_bad='#a54242'
        
    color_color0=  '#282a2e'
    color_color1=  '#a54242'
    color_color2=  '#5f819d'
    color_color3=  '#d4de61'
    color_color4=  '#8c9440'
    color_color5=  '#85678f'
    color_color6=  '#5e8d87'
    color_color7=  '#707880'
    color_color8=  '#373b41'
    color_color9=  '#cc6666'
    color_color10= '#81a2be'
    color_color11= '#f0c674'
    color_color12= '#b5bd68'
    color_color13= '#b294bb'
    color_color14= '#8abeb7'
    color_color15= '#c5c8c6'

    markup = 'pango'
    separator = false

    separator_block_width=2
    border_bottom = 1
    border_left = 0
    border_right = 0
    border_top = 0
    align='center'
}

order += "window_title"
#order += "sysdata"
